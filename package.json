{
  "name": "my-novu-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port=4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "bash scripts/test-setup.sh && jest",
    "test:connections": "bash scripts/test-setup.sh && jest __tests__/services/ && bash scripts/test-teardown.sh",
    "test:unit": "bash scripts/test-setup.sh && jest --testPathIgnorePatterns='(services|integration)' && bash scripts/test-teardown.sh",
    "test:integration": "bash scripts/test-setup.sh && jest __tests__/integration/ && bash scripts/test-teardown.sh",
    "test:watch": "bash scripts/test-setup.sh && jest --watch",
    "test:coverage": "bash scripts/test-setup.sh && jest --coverage && bash scripts/test-teardown.sh",
    "test:setup": "bash scripts/test-setup.sh",
    "test:teardown": "bash scripts/test-teardown.sh",
    "test:ci": "pnpm test:connections && pnpm test:unit && pnpm test:integration",
    "test:all": "bash scripts/test-setup.sh && jest && bash scripts/test-teardown.sh",
    "test:debug": "bash scripts/test-setup.sh && node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:lint": "eslint __tests__/**/*.{ts,tsx}",
    "test:type-check": "tsc --noEmit",
    "xnovu": "tsx cli/index.ts"
  },
  "dependencies": {
    "@novu/framework": "latest",
    "@novu/js": "^3.5.0",
    "@novu/nextjs": "^2.6.6",
    "@novu/api": "^1.0.0",
    "@react-email/components": "^0.0.41",
    "@react-email/tailwind": "^1.0.5",
    "@supabase/supabase-js": "^2.50.0",
    "bullmq": "^5.34.0",
    "ioredis": "^5.4.1",
    "next": "15.3.3",
    "node-cron": "^3.0.3",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^3.25.56",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "19.1.7",
    "@types/react-dom": "19.1.6",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.4",
    "supabase": "^2.24.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@types/react": "19.1.7",
    "@types/react-dom": "19.1.6"
  }
}
